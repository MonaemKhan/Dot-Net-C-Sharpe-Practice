@model MVC_PROJECT_PRACTICE.Models.Teacher

@{
    ViewData["Title"] = "TeacherCreate";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index">Others Link</a></li>
        <li class="breadcrumb-item"><a asp-area="" asp-controller="Teacher" asp-action="TeacherIndex">Student Details</a></li>
        <li class="breadcrumb-item active" aria-current="page">Create New Teacher</li>
    </ol>
</nav>
<div class="d-flex mb-2">
    <h1 class="col-12 text-center">Create New Teacher</h1>
</div>
<hr />
<div class="row d-flex align-items-center justify-content-center">
    <div class="card shadow p-3">
        <form asp-action="TeacherCreate" class="mt-2">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group d-flex mt-2">
                <label asp-for="TeacherId" class="control-label col-3"></label>
                <input asp-for="TeacherId" class="form-control" />
                <span asp-validation-for="TeacherId" class="text-danger"></span>
            </div>
            <div class="form-group d-flex mt-2">
                <label asp-for="TeacherName" class="control-label col-3"></label>
                <input asp-for="TeacherName" class="form-control" />
                <span asp-validation-for="TeacherName" class="text-danger"></span>
            </div>
            <div class="form-group d-flex mt-2">
                <label asp-for="TeacherEmail" class="control-label col-3"></label>
                <input asp-for="TeacherEmail" class="form-control" />
                <span asp-validation-for="TeacherEmail" class="text-danger"></span>
            </div>
            <div class="form-group d-flex mt-2">
                <label asp-for="TeacherContact" class="control-label col-3"></label>
                <input asp-for="TeacherContact" class="form-control" />
                <span asp-validation-for="TeacherContact" class="text-danger"></span>
            </div>
            <div class="form-group d-flex mt-2">
                <label asp-for="TeacherFaculty" class="control-label col-3"></label>
                <select id="facultySelect" onchange="changeDepartmentOptions()" asp-for="TeacherFaculty" class="form-select" aria-label="Default select example">
                    <option selected>Select A Faculty</option>
                    <option value="Engg">Engg.</option>
                    <option value="BBA">BBA</option>
                </select>
                <span asp-validation-for="TeacherFaculty" class="text-danger"></span>
            </div>
            <div class="form-group d-flex mt-2">
                <label asp-for="TeacherDepartment" class="control-label col-3"></label>
                <select id="departmentSelect" asp-for="TeacherDepartment" class="form-select" aria-label="Default select example">
                    <option value="- - -">- - -</option>
                </select>
                <span asp-validation-for="TeacherDepartment" class="text-danger"></span>
            </div>
            <div class="form-group d-flex mt-2">
                <label asp-for="TeacherJoinDate" class="control-label col-3"></label>
                <input type="date" asp-for="TeacherJoinDate" class="form-control" />
                <span asp-validation-for="TeacherJoinDate" class="text-danger"></span>
            </div>
            <div class="form-group col-12 text-center mt-2">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="TeacherIndex">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script type="text/javascript">
        function changeDepartmentOptions() {
            const facultySelect = document.getElementById("facultySelect");
            const departmentSelect = document.getElementById("departmentSelect");

            // Clear existing options
            departmentSelect.innerHTML = "";

            if (facultySelect.value === "Engg") {
                // Add options for Engineering departments
                const cseOption = document.createElement("option");
                cseOption.value = "CSE";
                cseOption.text = "CSE";
                departmentSelect.appendChild(cseOption);

                const eeeOption = document.createElement("option");
                eeeOption.value = "EEE";
                eeeOption.text = "EEE";
                departmentSelect.appendChild(eeeOption);
            } else if (facultySelect.value === "BBA") {
                // Add options for BBA departments
                const thmOption = document.createElement("option");
                thmOption.value = "THM";
                thmOption.text = "THM";
                departmentSelect.appendChild(thmOption);

                const mgtOption = document.createElement("option");
                mgtOption.value = "MGT";
                mgtOption.text = "MGT";
                departmentSelect.appendChild(mgtOption);
            } else {
                // Default option when no faculty is selected
                const defaultOption = document.createElement("option");
                defaultOption.value = "- - -";
                defaultOption.text = "- - -";
                departmentSelect.appendChild(defaultOption);
            }
        }
    </script>
}
