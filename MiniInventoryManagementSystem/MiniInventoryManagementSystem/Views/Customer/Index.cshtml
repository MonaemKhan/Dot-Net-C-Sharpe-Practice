@model IEnumerable<MiniInventoryManagementSystem.Models.Customer>

@{
    ViewData["Title"] = "Index of Customer";
}

<style>
    .card {
        border: 1px solid gold;
        border-radius: 10px;
        box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;
    }

    table, tr, th, td {
        border: 3px solid lightgrey;
        text-align: center;
    }

    thead {
        background-color: dimgrey;
        color: ghostwhite;
    }

    .addCatagory {
        text-align: right;
    }

        .addCatagory a {
            border-radius: 10px;
        }
</style>

<div class="card p-5">
    <h1 class="text-center">All Record's Customer</h1>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CustomerName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CustomerAddress)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CustomerPhone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CustomerEmail)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CustomerName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CustomerAddress)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CustomerPhone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CustomerEmail)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.CustomerId"><i class="bi bi-pencil-square text-danger fs-5"></i></a> |
                        <a asp-action="Details" asp-route-id="@item.CustomerId"><i class="bi bi-person-vcard text-danger fs-5"></i></a> |
                        <a asp-action="Delete" asp-route-id="@item.CustomerId"><i class="bi bi-trash text-danger fs-5"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <p class="addCatagory me-1">
        <a asp-action="Create" class="btn btn-primary fs-5">Add New Customer</a>
    </p>
</div>
