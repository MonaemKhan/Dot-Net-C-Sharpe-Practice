@model MiniInventoryManagementSystem.Models.SalesMan

@{
    ViewData["Title"] = $"Delete Info of SalesMan {Model.SalesManName}";
}
<style>
    .card {
        border: 1px solid gold;
        border-radius: 10px;
        box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;
    }
</style>

<div class="card">
    <h3 class="ms-5">Are you sure you want to delete salesMan @Model.SalesManName's Info ?</h3>
    <div class="ms-5 mb-3">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.SalesManName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.SalesManName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.SalesManDOB)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.SalesManDOB)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.SalesManAddress)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.SalesManAddress)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.SalesManPhone)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.SalesManPhone)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.SalesManEmail)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.SalesManEmail)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.SalesManDesignation)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.SalesManDesignation)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.SalesManSalary)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.SalesManSalary)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.SalesManJoiningDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.SalesManJoiningDate)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="SalesManId" />
            <input type="submit" value="Delete" class="btn btn-danger" />
        </form>
    </div>
    <div class="ms-2">
        <a asp-action="Index" class="text-decoration-none"><i class="bi bi-caret-left-square fs-6"></i>Back To SalesMan's List</a>
    </div>
</div>