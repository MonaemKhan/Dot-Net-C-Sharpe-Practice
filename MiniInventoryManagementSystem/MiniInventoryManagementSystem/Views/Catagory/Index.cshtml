@model IEnumerable<MiniInventoryManagementSystem.Models.Catagory>

@{
    ViewData["Title"] = "View Catagory";
}
<link rel="stylesheet" href=@Url.Content("~/DataTablePrint/datatableprint.css")>
<link rel="stylesheet" href=@Url.Content("~/DataTablePrint/datatableprint_jQuery.css")>
<style>
    .card {
        border: 1px solid gold;
        border-radius: 10px;
        box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;
    }

    .addCatagory {
        text-align: right;
    }

    .addCatagory a {
        border-radius: 10px;
    }
</style>

<div class="card p-4 pb-1">
    <h1 class="text-center">All Record's of Catagory</h1>
    <div class="row mt-3 mb-4">
        <table id="CustomDataTable" class="table display" style="width:100%">
            <thead>
                <tr>
                    <th>SN</th>
                    <th>
                        @Html.DisplayNameFor(model => model.CatagoryId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CatagoryName)
                    </th>
                    <th style=" display: none;"></th>
                </tr>
            </thead>
            <tbody>
                @{
                    int i = 1;
                }
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@i</td>
                        @{
                            i++;
                        }
                        <td>
                            @Html.DisplayFor(modelItem => item.CatagoryId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CatagoryName)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.CatagoryId"><i class="bi bi-pencil-square text-danger fs-5"></i></a>
                            <i class="bi bi-cursor-text"></i>
                            <a asp-action="Delete" asp-route-id="@item.CatagoryId"><i class="bi bi-trash text-danger fs-5"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <p class="addCatagory me-1">
        <a asp-action="Create" class="btn btn-primary fs-5">Add New Catagory</a>
    </p>
</div>

@section Scripts {
    <script src=@Url.Content("~/DataTablePrint/DataTable_JQuery.js")></script>
    <script src=@Url.Content("~/DataTablePrint/DataTable_JQuery2.js")></script>
    <script src=@Url.Content("~/DataTablePrint/DataTable_JQuery3.js")></script>
    <script src=@Url.Content("~/DataTablePrint/Datatable_JQuery4.js")></script>
    <script>
        $(document).ready(function () {
            $('#CustomDataTable').DataTable({
                dom: 'Bfrtip',
                buttons: [
                    'print'
                ],
            });
        });
    </script>
}